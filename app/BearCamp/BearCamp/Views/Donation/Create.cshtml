@model BearEF.Donation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Donation</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonorID, "Donor")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DonorID", "Select Donor")
            @Html.ValidationMessageFor(model => model.DonorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonationAmount, "Donation Amount")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DonationAmount)
            @Html.ValidationMessageFor(model => model.DonationAmount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonataionDate, "Donation Date")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DonataionDate)
            @Html.ValidationMessageFor(model => model.DonataionDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comments, "Comments")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comments)
            @Html.ValidationMessageFor(model => model.Comments)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonationType, "Donation Type")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DonationType", "Select Donation Type")
            @Html.ValidationMessageFor(model => model.DonationType)
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-info">  @Html.ActionLink("Back to List", "Index", null, new{@class="btn"})
        </p>
    </fieldset>
}

