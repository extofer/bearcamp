@model BearEF.Donation

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Donation</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonationsID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DonationsID)
            @Html.ValidationMessageFor(model => model.DonationsID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonorID, "Donor")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DonorID", String.Empty)
            @Html.ValidationMessageFor(model => model.DonorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonationAmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DonationAmount)
            @Html.ValidationMessageFor(model => model.DonationAmount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonataionDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DonataionDate)
            @Html.ValidationMessageFor(model => model.DonataionDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comments)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comments)
            @Html.ValidationMessageFor(model => model.Comments)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DonationType, "DonationTypeID")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DonationType", String.Empty)
            @Html.ValidationMessageFor(model => model.DonationType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
