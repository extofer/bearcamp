@model IEnumerable<BearEF.Permission>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Roles</h2>

<table class="table">
    <tr>
        <th>
            User
        </th>
        <th>
            Feature
        </th>
        <th>
            Permission Sort
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feature.FeatureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionSort)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.PermissionID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.PermissionID })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create", null, new{@class="btn btn-info"})
</p>
