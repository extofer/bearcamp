<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Bear Camp</title>
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
    <script src="@Url.Content("/Scripts/jquery-1.8.2.min.js")"type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3-respond-1.1.0.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <img src="../../Content/images/bearsmall.png" style="padding-bottom:10px"/>
            <div id="logindisplay" class="btn">
                @Html.Partial("_LogOnPartial")
            </div>
            <div class="navbar">
                <div class="navbar-inner">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Donors", "Index", "Donors")</li> 
                            <li>@Html.ActionLink("Manage Users", "Index", "User")</li> 
                            <li>@Html.ActionLink("Manage Roles", "Index", "Permission")</li>  
                            <li>@Html.ActionLink("Manage Donation Types", "Index", "DonationType")</li>
                                
                            <li>@Html.ActionLink("Manage Donations", "Index", "Donation")</li>
                                
                        }
                    </ul>
                </div>
            </div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>